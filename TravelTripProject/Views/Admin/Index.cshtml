@model List<TravelTripProject.Models.Siniflar.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>

    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>BAŞLIK</th>
            <th>TARİH</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>DETAYLAR</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Baslik</td>
                <td>@item.Tarih.ToString("dd.MM.yyyy")</td>
                <td><a href="/Admin/BlogSil/@item.ID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Admin/BlogGetir/@item.ID" class="btn btn-success">Güncelle</a></td>
                <td><a href="#" class="btn btn-warning">Detay Görüntüle</a></td>

            </tr>
        }

    </table>

<a href="/Admin/YeniBlog/" class="btn btn-success">Yeni Blog Ekle</a>

